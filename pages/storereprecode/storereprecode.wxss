/* pages/storereprecode/storereprecode.wxss */

@import "../../app.wxss";
/*swiper*/  
.swiper-box {  
  display: block;  
  height: 100%;  
  width: 100%;  
  overflow: hidden;  
}  
.hot-box {  
  display: block;  
  height: 100%;  
  font-family: Helvetica;  
}  
/* list */  
.themes-list {  
  /* background: #F2F2F2;   */
  display: block;  
  margin-bottom: 20px;  
  color: #444;
}  

.themes-list-box .com-lf-img {
  height: 150rpx;
  width: 150rpx;
  padding: 10rpx 20rpx;
}
.themes-list-box .com-rt-box {
  font-size: 26rpx;
  width: 70%;
}

.com-topbox .repair-money {
  color: #E43427;
  display: inline-block;
}
.com-topbox .topbox-rt {
  color: #E43427;
}

.themes-list-box .bottom .btom-btn {
  height: 50rpx;
  font-size: 26rpx;
  line-height: 50rpx;
  background: #28B98F;
  color: #fff;
}
.themes-list-main {  
  margin-left: 1px;  
}  
.themes-list-name {  
  font-size: 14px;  
  color: #444;  
  height: 20px;  
  line-height: 20px;  
  overflow: hidden;  
}  
/*tab*/  
.swiper-tab {  
  background: #fff;  
  display: flex;  
  position: relative;  
  z-index: 2;  
  flex-direction: row;  
  justify-content: space-around;  
  align-items: center;  
  border-top: 1px solid #ECECEC;  
}  
.swiper-tab-list {  
  line-height: 40px; 
  flex: auto;
  text-align: center;
  align-items: center;
  font-size: 28rpx;  
  font-family: Helvetica;  
}  
.active {  
  border-bottom: 1px solid #28B98F;  
  color: #28B98F;  
}  

.themes-list-box .bottom {
  display: flex; 
  border-top: 1px solid #f2f2f2; 
  padding: 20rpx 0; 
  padding-left: 30%
}
.themes-list-box .bottom .btom-btn {
