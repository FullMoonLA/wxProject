/* pages/checkcomment/checkcomment.wxss */
page{
  font-size: 34rpx;
  background-color: #f2f2f2;
}
.pages{
  margin: 30rpx;
  border: 1px solid #ececec;
  background-color: #fff;
  padding: 20rpx
}
.topuser{
  display: flex;
  flex-direction: row;
  align-items: center
}
.topuser image{
  height: 100rpx;
  width: 100rpx;
  border-radius: 100%;
  margin-right: 20rpx;
}
.time{
  font-size: 28rpx;
  color: #D0D0D0;
  line-height: 60rpx;
  float: right;
  padding-right: 5rpx
}
.starlist{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 15rpx
}
.star {
  margin-left: 10rpx;
  height: 40rpx;
  width: 40rpx;
}
.aftertext{
  color: #666;
  font-size: 28rpx;
  margin: 0 50rpx;
  position: relative;
  top: -5rpx;
}
.content{
  font-size: 28rpx;
  color:  #D0D0D0;
  margin-right:  20rpx;
}
.place{
  background-color: #f2f2f2;
  padding: 10rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  width: 100%; 
  height: 200rpx;
}
.com-content {
  overflow: hidden
}