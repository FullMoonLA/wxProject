.mask_layer {  
  width: 100%;  
  height: 100%;  
  position: fixed; 
  top: 0;
  left: 0; 
  z-index: 1000;  
  background: #000;  
  opacity: 0.5;  
  overflow: hidden;  
}  
.modal_box {  
  /* width: 76%;   */
  overflow: hidden;  
  position: fixed;  
  top: 50%;  
  left: 0;  
  z-index: 1001;  
  background: #fafafa;  
  margin: -240px 10% 0 10%;  
  border-radius: 3px;  
}  
  
